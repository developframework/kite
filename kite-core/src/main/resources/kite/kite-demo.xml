<kite-configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                        xmlns="https://github.com/developframework/kite/schema"
                        xsi:schemaLocation="
	https://github.com/developframework/kite/schema kite-configuration-0.1.xsd">

    <template-package namespace="student-demo">

        <template id="student-list" data="students" xml-root="xml" xml-item="item">
            <property data="id"/>
            <property data="name"/>
            <property data="classId"/>
            <property-date data="birthday" pattern="yyyy-MM-dd"/>
            <!-- 一对一对应accounts数组每项 -->
            <link data="#accounts" alias="account">
                <!-- 引用另一个命名空间的模板 -->
                <include id="account-detail" namespace="account-demo"/>
            </link>
            <!-- 一对一对应scores数组每项 -->
            <link data="#scores" alias="score"/>
        </template>
    </template-package>

    <template-package namespace="account-demo">

        <template id="account-detail">
            <property data="username"/>
            <property data="password"/>
        </template>
    </template-package>
</kite-configuration>