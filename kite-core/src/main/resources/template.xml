<kite-configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xmlns="https://github.com/developframework/kite/schema"
                    xsi:schemaLocation="https://github.com/developframework/kite/schema kite-configuration.xsd">

    <template-package namespace="template">

        <template id="user-list" data="users">
            <include id="user"/>
        </template>

        <template id="user-detail" data="users[0]">
            <include id="user"/>
        </template>

        <fragment id="user">
            <property data="id"/>
            <property data="name" converter="nameConverter"/>
            <property data="age"/>
            <property-date data="createTime"/>
            <link data=""
        </fragment>

    </template-package>

</kite-configuration>